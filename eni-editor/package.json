{
  "name": "eni-editor",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev -p 8080",
    "dev:server": "node server.js",
    "dev:electron": "concurrently -k \"npm:dev:server\" \"wait-on http://localhost:8080 && electron .\"",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "typecheck": "tsc --noEmit",
    "lint": "next lint",
    "test:install": "playwright install --with-deps",
    "test:e2e": "playwright test",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test:e2e",
    "test:e2e:ui": "playwright test --ui",
    "clean:cache": "npm run clean:cache:unix || npm run clean:cache:win",
    "clean:cache:unix": "rm -rf .next .turbo",
    "clean:cache:win": "powershell -NoProfile -Command \"Remove-Item -Recurse -Force .next,.turbo -ErrorAction SilentlyContinue\""
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^2.2.0",
    "connect-sqlite3": "^0.9.16",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "next": "^15.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ssh2-sftp-client": "^12.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "c8": "^10.1.2",
    "ts-node": "^10.9.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "nyc": "^17.1.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1"
  }
}
