{
  "name": "eni-editor",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev -p 8080",
    "dev:server": "node server.js",
    "dev:electron": "concurrently -k \"npm:dev:server\" \"wait-on http://localhost:8080 && electron .\"",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "typecheck": "tsc --noEmit",
    "lint": "next lint",
    "test:install": "playwright install --with-deps",
    "test:e2e": "playwright test",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test:e2e",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "express": "^4.19.2",
    "express-session": "^1.18.1",
    "connect-sqlite3": "^0.9.15",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.2",
    "body-parser": "^1.20.3",
    "ssh2-sftp-client": "^10.0.1",
    "next": "^15.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "better-sqlite3": "^11.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "electron": "^31.3.1",
    "wait-on": "^7.2.0",
    "@playwright/test": "^1.47.2",
    "nyc": "^15.1.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.3",
    "typescript": "^5.6.3"
  }
}
