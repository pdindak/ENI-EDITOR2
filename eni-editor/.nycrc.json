{
  "all": true,
  "extension": [".js", ".ts", ".tsx"],
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "server.js"
  ],
  "exclude": [
    "**/*.d.ts",
    "src/**/*.d.ts",
    "tests/**",
    "playwright.config.*",
    "next.config.*",
    "**/*.spec.*"
  ],
  "reporter": ["lcov", "text-summary"],
  "report-dir": "./coverage",
  "check-coverage": true,
  "branches": 0,
  "functions": 0,
  "lines": 0,
  "statements": 0,
  "cache": false
}
